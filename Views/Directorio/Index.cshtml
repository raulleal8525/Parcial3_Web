@model List<Parcial3_Web.Models.Contacto>
@{
    ViewData["Title"] = "Consultar Directorio";
}

<div class="row">
    <div class="col-12">
        <h2><i class="fas fa-address-book"></i> Directorio Telefónico</h2>
        <p class="text-muted">Lista de contactos disponibles</p>

        <!-- Mostrar mensajes de éxito -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Departamento</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contacto in Model)
                    {
                        <tr>
                            <td>@contacto.Nombre</td>
                            <td>@contacto.Telefono</td>
                            <td>@contacto.Email</td>
                            <td>@contacto.Departamento</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@contacto.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@contacto.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No hay contactos en el directorio.
                <a asp-action="Create" class="alert-link">Agregar primer contacto</a>
            </div>
        }
    </div>
</div>